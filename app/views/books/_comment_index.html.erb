<h4>Comment</h4>
  <table class="table table-hover table-inverse ">
    <tbody>
      <% @book.book_comments.each do |book_comment| %>
      <tr>
        <td>
          <%= attachment_image_tag book_comment.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %></br>
          <%= link_to book_comment.user.name ,user_path(book_comment.user.id) %>
        </td>
        <td><%= book_comment.comment %></td>
        <td>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comments_path(book_comment), method: :delete, remote: true, class: "btn btn-danger" %>
          <% end %>
        </td>

      </tr>
      <% end %>
    </tbody>
  </table>

