<p id="notice"></p>
<div class="container px-5 px-sm-8">
  <div class="row">

    <div class="col-md-3">

      <h2>User info</h2>
      <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
          <tr>
            <th>follows</th>
            <th><%= link_to @user.followings.count, users_follow_path(@user) %></th>
          </tr>
          <tr>
            <th>followers</th>
            <th><%= link_to @user.followers.count, users_follower_path(@user) %></th>
          </tr>
        </tbody>
      </table>

			<% if current_user != @user %>
				<% if @user.followed_by?(current_user) %>
					<%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: 'btn btn-info' %>
				<% else %>
					<%= link_to "フォローする", user_relationships_path(@user.id), method: :post, class: 'btn btn-success'%>
				<% end %>
			<% end %>

      <% if current_user == @user %>
        <div class="row">
          <%= link_to '', edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
        </div>
      <% end %>

      <h2 class="mt-3 new_book_">New book</h2>

      <%= form_with model: @book, local:true do |f| %>

        <h4 class="book_title">Title</h4>
        <%= f.text_area :title, size: "20x1" %>
        <h4 class="book_body">Opinion</h4>
        <%= f.text_area :body, size: "20x3" %>
        <div class="form-group">
          <%= f.submit 'Create Book', class: 'btn btn-sm btn-success opinion_field' %>
        </div>
      <% end %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">

        <thead>
          <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <% @books.each do |book| %>
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", size:'40x40' %>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>

            <td>
              <% if book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorites_path(book), method: :delete do %>
                    ♥<%= book.favorites.count %>
                  <% end %>
                </p>
                <% else %>
                <p>
                  <%= link_to book_favorites_path(book), method: :post do %>
                    ♡<%= book.favorites.count %>
                  <% end %>
                </p>
              <% end %>
            </td>
            <td><%= link_to "comments：#{book.book_comments.count}", book_path(book.id) %></td>

          </tr>
        </tbody>
        <% end %>

      </table>
    </div>
  </div>
</div>
